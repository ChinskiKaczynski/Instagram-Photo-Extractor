{
  "manifest_version": 2,
  "name": "Instagram Photo Extractor",
  "version": "1.5",
  "description": "Wyciąga zdjęcia z postów na Instagramie i wyświetla je w pełnej rozdzielczości.",
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.instagram.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  }
}